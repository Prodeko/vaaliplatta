{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "auto",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "incremental": true,

    /* Path Aliases */
    "baseUrl": "./src",

    "allowImportingTsExtensions": false,

    /* Build options */
    "outDir": "dist",
    "rootDir": "."  // Ensure this points to your source files
  },
  "include": [
    "src/**/*.ts",        // Include TypeScript files in src
    "src/**/*.tsx",       // Include TypeScript files in src
    ".eslintrc.cjs",      // Exclude any specific config files
    "next-env.d.ts"      // Exclude specific config files
  ],
  "exclude": [
    "node_modules",       // Exclude node_modules
    "*.config.cjs",       // Exclude config files
    "*.config.mjs",       // Exclude config files
    "dist"                // Exclude output directory
  ]
}
